main() {
    const int a = 2;
    const array int[] b = {a, (a * 3 + 7 -4 % 2 + 1) / 25 - 7 * 82};
    var array int[] unidimensional = array(int [7]);
    var array int[][] bidimensional = {{3,2},{3,4},{5,7}};
    var array int[][][] tridimensional;

    tridimensional = array(int [2][2][3]);

    unidimensional = {3, 7, 8};
    bidimensional = {{1,2},{3,4}};
    tridimensional =
    {
        {
            {10, -20, -99 * 3},
            {30, (-40 + 13)/8%3, -88}
        },
        {
            {50, 60, 77},
            {80, 70, 66}
        }
    };

    unidimensional[a] = 7;
    bidimensional[0][1] = 7;
    bidimensional[0] = {7, 8};
    tridimensional[7][3 + 7][4] = 7;

    unidimensional[1 + a] += a;
    tridimensional[0][0][0] -= bidimensional[1][4];

    for (var int i = 0; i < length(bidimensional); i += 1) {
        for (var int j = 0; j < length(bidimensional[i]); i += 1) {
            bidimensional[i][j] = i * j;
        }
    }
}
